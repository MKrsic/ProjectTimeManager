@model IEnumerable<ProjectTimeManager.Models.ProjectTimeVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeSpent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.ProjectName, "Index" , new { controller = "MemberTimeTrack", id = item.Project_ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeSpent)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Project_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Project_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Project_ID })
        </td>
    </tr>
}

</table>
